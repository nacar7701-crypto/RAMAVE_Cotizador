        }
        .welcome-msg p { color: var(--text-muted); margin: 5px 0 0; font-size: 1.05rem; }

        /* GRID & CARDS */
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
        }

        .card {
            background: white;
            border-radius: 24px;
            padding: 35px;
            text-decoration: none;
            color: inherit;
            transition: var(--transition);
            border: 1px solid rgba(226, 232, 240, 0.8);
            display: flex;
            flex-direction: column;
            position: relative;
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0; right: 0;
            width: 100px; height: 100px;
            background: linear-gradient(135deg, rgba(198, 40, 40, 0.03) 0%, transparent 100%);
            border-radius: 0 24px 0 100%;
        }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-lg);
            border-color: rgba(198, 40, 40, 0.2);
        }

        .icon-circle {
            width: 64px;
            height: 64px;
            background: #f8fafc;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 25px;
            font-size: 28px;
            transition: var(--transition);
            border: 1px solid #f1f5f9;
        }

        .card:hover .icon-circle {
            background: var(--ramave-red);
            color: white;
            transform: scale(1.1) rotate(-5deg);
            box-shadow: 0 10px 15px -3px rgba(198, 40, 40, 0.3);
        }

        .card h3 {
            margin: 0;
            color: #1e293b;
            font-size: 1.4rem;
            font-weight: 700;
            letter-spacing: -0.3px;
        }

        .card p {
            font-size: 0.95rem;
            color: var(--text-muted);
            margin-top: 12px;
            line-height: 1.5;
            flex-grow: 1;
        }

        .card-footer {
            margin-top: 25px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.85rem;
            font-weight: 700;
            color: var(--ramave-red);
            opacity: 0;
            transform: translateX(-10px);
            transition: var(--transition);
        }

        .card:hover .card-footer {
            opacity: 1;
            transform: translateX(0);
        }

        @@media (max-width: 768px) {
            .grid { grid-template-columns: 1fr; }
            .welcome-msg h2 { font-size: 1.8rem; }
            .card { padding: 25px; }
            .card-footer { opacity: 1; transform: translateX(0); }
        }
    </style>
</head>


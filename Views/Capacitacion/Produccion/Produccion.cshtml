@{
    Layout = null;
    var nombreUsuario = Context.Session.GetString("UsuarioNombre") ?? "Colaborador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Capacitación Producción | RAMAVE</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --ramave-red: #c62828;
            --ramave-dark: #8e0000;
            --bg-gray: #f8fafc;
            --text-main: #1e293b;
            --text-muted: #64748b;
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * { box-sizing: border-box; font-family: 'Inter', sans-serif; }
        body { margin: 0; background: var(--bg-gray); color: var(--text-main); }

        header {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            padding: 0.8rem 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .header-left { display: flex; align-items: center; gap: 15px; }
        header img { height: 40px; }
        header h1 { margin: 0; font-size: 1rem; color: var(--ramave-red); }

        .btn-logout {
            color: #ef4444;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .container { max-width: 900px; margin: 0 auto; padding: 60px 20px; }
        
        .welcome-msg { margin-bottom: 40px; text-align: center; }
        .welcome-msg h2 { font-size: 2rem; font-weight: 800; margin: 0; }
        .welcome-msg p { color: var(--text-muted); margin-top: 10px; }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .card {
            background: white;
            border-radius: 24px;
            padding: 40px;
            text-decoration: none;
            color: inherit;
            transition: var(--transition);
            border: 1px solid rgba(226, 232, 240, 0.8);
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-lg);
            border-color: var(--ramave-red);
        }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: #fef2f2;
            color: var(--ramave-red);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            margin-bottom: 20px;
            transition: var(--transition);
        }

        .card:hover .icon-circle {
            background: var(--ramave-red);
            color: white;
            transform: rotate(-5deg) scale(1.1);
        }

        .card h3 { font-size: 1.5rem; margin: 0; }
        .card p { color: var(--text-muted); font-size: 0.95rem; line-height: 1.6; }

        .btn-start {
            margin-top: 20px;
            background: #f1f5f9;
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.8rem;
            color: var(--text-main);
            transition: var(--transition);
        }

        .card:hover .btn-start {
            background: var(--ramave-red);
            color: white;
        }

        @@media (max-width: 600px) {
            .grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>

    <header>
        <div class="header-left">
            <img src="/images/logoramave.jpg" alt="Logo RAMAVE" />
            <h1>CAPACITACIÓN PRODUCCIÓN</h1>
        </div>
        <a href="@Url.Action("Logout", "Auth")" class="btn-logout">
            <i class="fas fa-sign-out-alt"></i> Salir
        </a>
    </header>

    <div class="container">
        <div class="welcome-msg">
            <h2>¡Hola, @nombreUsuario!</h2>
            <p>Selecciona el área de producción que deseas consultar o aprender hoy.</p>
        </div>

        <div class="grid">
            <a href="@Url.Action("Cortinas", "Capacitacion")" class="card">
                <div class="icon-circle">
                    <i class="fas fa-scroll"></i>
                </div>
                <h3>Cortinas</h3>
                <p>Manuales de confección, armado de rieles y especificaciones de telas pesadas.</p>
                <div class="btn-start">VER MÓDULOS</div>
            </a>

            <a href="@Url.Action("Persianas", "Capacitacion")" class="card">
                <div class="icon-circle">
                    <i class="fas fa-border-all"></i>
                </div>
                <h3>Persianas</h3>
                <p>Ensamble de enrollables, sheer, romanas y ajuste de mecanismos técnicos.</p>
                <div class="btn-start">VER MÓDULOS</div>
            </a>
        </div>
    </div>

</body>
</html>
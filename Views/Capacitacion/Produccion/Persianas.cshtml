@{
    Layout = null;
    var nombreUsuario = Context.Session.GetString("UsuarioNombre") ?? "Colaborador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Capacitación Persianas | RAMAVE</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --ramave-red: #c62828;
            --ramave-dark: #8e0000;
            --bg-gray: #f8fafc;
            --text-main: #1e293b;
            --text-muted: #64748b;
            --shadow-lg: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * { box-sizing: border-box; font-family: 'Inter', sans-serif; }
        body { margin: 0; background: var(--bg-gray); color: var(--text-main); }

        header {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            padding: 0.8rem 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .header-left { display: flex; align-items: center; gap: 15px; }
        header img { height: 40px; }
        header h1 { margin: 0; font-size: 1rem; color: var(--ramave-red); }

        .btn-back {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .container { max-width: 1100px; margin: 0 auto; padding: 40px 20px; }
        
        .welcome-msg { margin-bottom: 40px; text-align: center; }
        .welcome-msg h2 { font-size: 1.8rem; font-weight: 800; margin: 0; }
        .welcome-msg p { color: var(--text-muted); margin-top: 10px; }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            text-decoration: none;
            color: inherit;
            transition: var(--transition);
            border: 1px solid rgba(226, 232, 240, 0.8);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--ramave-red);
        }

        .icon-circle {
            width: 65px;
            height: 65px;
            background: #fff5f5;
            color: var(--ramave-red);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 15px;
            transition: var(--transition);
        }

        .card:hover .icon-circle {
            background: var(--ramave-red);
            color: white;
        }

        .card h3 { font-size: 1.2rem; margin: 0 0 10px 0; }
        .card p { color: var(--text-muted); font-size: 0.85rem; line-height: 1.5; margin-bottom: 15px; flex-grow: 1; }

        .badge {
            font-size: 0.7rem;
            background: #f1f5f9;
            padding: 4px 10px;
            border-radius: 20px;
            text-transform: uppercase;
            font-weight: 700;
            color: var(--text-muted);
        }

        .card:hover .badge {
            background: #fee2e2;
            color: var(--ramave-red);
        }

    </style>
</head>
<body>

    <header>
        <div class="header-left">
            <img src="/images/logoramave.jpg" alt="Logo RAMAVE" />
            <h1>PRODUCCIÓN: PERSIANAS</h1>
        </div>
        <a href="@Url.Action("Produccion", "Capacitacion")" class="btn-back">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </header>

    <div class="container">
        <div class="welcome-msg">
            <h2>Módulos de Persianas</h2>
            <p>Selecciona el tipo de persiana para ver manuales de armado y especificaciones.</p>
        </div>

        <div class="grid">
            <a href="#" class="card">
                <div class="icon-circle"><i class="fas fa-arrows-alt-v"></i></div>
                <h3>Enrollable</h3>
                <p>Configuración de tubos, caída de tela y ensamble de mandos manuales y motores.</p>
                <div class="badge">Manual / Motorizada</div>
            </a>

            <a href="#" class="card">
                <div class="icon-circle"><i class="fas fa-layer-group"></i></div>
                <h3>Duo ó Sheer</h3>
                <p>Alineación de franjas, instalación de cassettes y sincronización de motores.</p>
                <div class="badge">Manual / Motorizada</div>
            </a>

            <a href="#" class="card">
                <div class="icon-circle"><i class="fas fa-align-justify"></i></div>
                <h3>Verticales</h3>
                <p>Armado de rieles, colocación de tabletas y ajuste de cordón/cadena.</p>
                <div class="badge">PVC / Tela</div>
            </a>

            <a href="#" class="card">
                <div class="icon-circle"><i class="fas fa-columns"></i></div>
                <h3>Panel Japonés</h3>
                <p>Montaje de vías, traslape de lienzos y configuración de apertura.</p>
                <div class="badge">Vías Múltiples</div>
            </a>

            <a href="#" class="card">
                <div class="icon-circle"><i class="fas fa-umbrella"></i></div>
                <h3>Toldos</h3>
                <p>Estructuras de exterior, brazos articulados y sensores de viento/sol.</p>
                <div class="badge">Manual / Motorizado</div>
            </a>
        </div>
    </div>

</body>
</html>
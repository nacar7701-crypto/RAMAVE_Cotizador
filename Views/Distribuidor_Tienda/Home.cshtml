@{
    ViewData["Title"] = "Panel de Cotización";
}

<style>
    :root {
        --ramave-red: #c62828;
        --ramave-dark-red: #8e0000;
        --bg-light: #f4f6f9;
        --card-shadow: 0 10px 20px rgba(0,0,0,0.08);
    }

    body {
        background-color: var(--bg-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    /* Header Responsivo */
    .header-nav {
        background: white;
        padding: 0.8rem 1.5rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .logo-img {
        height: 50px;
        width: auto;
    }

    /* Contenedor Adaptable */
    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
        box-sizing: border-box;
    }

    .welcome-text {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .welcome-text h1 {
        font-size: clamp(1.5rem, 5vw, 2.5rem); /* Ajuste automático según pantalla */
        color: #222;
        margin-bottom: 0.5rem;
    }

    .welcome-text span {
        color: var(--ramave-red);
    }

    .welcome-text p {
        font-size: clamp(0.9rem, 2vw, 1.1rem);
        color: #666;
    }

    /* Grid Inteligente */
    .selection-grid {
        display: grid;
        /* Define columnas: 1 en móvil, 2 en tablet pequeña, 3 en escritorio */
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        justify-content: center;
    }

    /* Tarjetas */
    .category-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        cursor: pointer;
        display: flex;
        flex-direction: column;
        box-shadow: var(--card-shadow);
        border: 1px solid #eee;
    }

    .category-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.12);
        border-color: var(--ramave-red);
    }

    .card-image {
        width: 100%;
        height: 220px;
        background-color: #f0f0f0;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .category-card:hover .card-image img {
        transform: scale(1.05);
    }

    .card-body {
        padding: 1.5rem;
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-body h3 {
        margin: 0 0 1rem 0;
        font-size: 1.4rem;
        color: #333;
    }

    .btn-quote {
        background-color: var(--ramave-red);
        color: white;
        border: none;
        padding: 0.8rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        width: 100%;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    /* --- Media Queries para Control Total --- */

    /* Tablets (Pantallas medianas) */
    @@media (max-width: 992px) {
        .selection-grid {
            grid-template-columns: repeat(2, 1fr); /* Fuerza 2 columnas en tablet */
        }
    }

    /* Móviles (Pantallas pequeñas) */
    @@media (max-width: 600px) {
        .header-nav {
            justify-content: center; /* Logo al centro en móvil */
        }
        .selection-grid {
            grid-template-columns: 1fr; /* 1 columna completa */
        }
        .container {
            padding-top: 1rem;
        }
        .card-image {
            height: 180px; /* Imagen un poco más baja en móvil */
        }
    }
</style>

<header class="header-nav">
    <img src="~/images/logo_ramave.png" alt="RAMAVE Logo" class="logo-img">
</header>

<div class="container">
    <div class="welcome-text">
        <h1>¿Qué quieres <span>cotizar</span> hoy?</h1>
        <p>Selecciona el tipo de confección para tus persianas.</p>
    </div>

    <div class="selection-grid">
        <div class="category-card" onclick="location.href='@Url.Action("Cotizar", "Cotizador", new { tipo = "ojillos" })'">
            <div class="card-image">
                <img src="~/images/persiana-ojillos.jpg" alt="Ojillos">
            </div>
            <div class="card-body">
                <h3>Ojillos</h3>
                <button class="btn-quote">Seleccionar</button>
            </div>
        </div>

        <div class="category-card" onclick="location.href='@Url.Action("Cotizar", "Cotizador", new { tipo = "francesa" })'">
            <div class="card-image">
                <img src="~/images/persiana-francesa.jpg" alt="Francesa">
            </div>
            <div class="card-body">
                <h3>Francesa</h3>
                <button class="btn-quote">Seleccionar</button>
            </div>
        </div>

        <div class="category-card" onclick="location.href='@Url.Action("Cotizar", "Cotizador", new { tipo = "ondulada" })'">
            <div class="card-image">
                <img src="~/images/persiana-ondulada.jpg" alt="Ondulada">
            </div>
            <div class="card-body">
                <h3>Ondulada</h3>
                <button class="btn-quote">Seleccionar</button>
            </div>
        </div>
    </div>
</div>
@model RAMAVE_Cotizador.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Cotizador de Persianas</title>

    <style>
        * {
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            margin: 0;
            min-height: 100vh;
            background: url('/images/background.jpg') no-repeat center center / cover;
        }

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(255,255,255,.85);
        }

        /* LOGO */
        .logo {
            position: absolute;
            top: 20px;
            right: 30px;
            z-index: 3;
        }

        .logo img {
            height: 50px;
        }

        /* CONTENEDOR */
        .login-container {
            position: relative;
            z-index: 4;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }

        /* TARJETA */
        .login-card {
            width: 100%;
            max-width: 380px;
            background: white;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,.15);
        }

        .login-card h2 {
            margin-bottom: 1.5rem;
            color: #c62828;
            text-align: center;
            font-size: 1.4rem;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        label {
            font-size: .9rem;
            color: #555;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: .95rem;
        }

        input:focus {
            border-color: #c62828;
            outline: none;
        }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #c62828;
            font-size: .9rem;
        }

        .error {
            color: #c62828;
            font-size: .8rem;
            margin-top: 4px;
        }

        button {
            width: 100%;
            padding: 12px;
            background: #c62828;
            border: none;
            color: white;
            font-size: 1rem;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 1rem;
        }

        button:hover {
            background: #a81f1f;
        }

        /* üì± CELULAR */
        @@media (max-width: 480px) {
            .login-card {
                padding: 1.8rem;
            }

            .login-card h2 {
                font-size: 1.2rem;
            }

            .logo img {
                height: 40px;
            }
        }

        /* üì± TABLET */
        @@media (min-width: 481px) and (max-width: 1024px) {
            .login-card {
                max-width: 420px;
            }

            .logo img {
                height: 45px;
            }
        }
    </style>
</head>
<body>

<div class="overlay"></div>

<div class="logo">
    <img src="/images/logo.jpg" alt="Logo empresa" />
</div>

<div class="login-container">
    <div class="login-card">
        <h2>Cotizador de Persianas</h2>

        <form asp-action="Login" method="post" novalidate>

            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" />
                <span class="error" asp-validation-for="Correo"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="password-wrapper">
                    <input asp-for="Password" id="password" type="password" />
                    <span class="toggle-password" onclick="togglePassword()">üëÅ</span>
                </div>
                <span class="error" asp-validation-for="Password"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }

            <div asp-validation-summary="ModelOnly" class="error"></div>

            <button type="submit">Iniciar sesi√≥n</button>
        </form>
    </div>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById("password");
        input.type = input.type === "password" ? "text" : "password";
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>

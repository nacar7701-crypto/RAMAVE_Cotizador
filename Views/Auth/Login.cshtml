@model RAMAVE_Cotizador.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>Acceso | F√ÅBRICA DE PERSIANAS RAMAVE</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* ... Tu CSS se mantiene igual (es excelente) ... */
        :root { --ramave-red: #c62828; --ramave-red-dark: #a81f1f; --text-main: #2d3436; --border-color: #ced4da; --white-trans: rgba(255, 255, 255, 0.92); }
        * { box-sizing: border-box; font-family: 'Inter', sans-serif; }
        body { margin: 0; min-height: 100vh; display: flex; justify-content: center; align-items: center; background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('/images/RAMAVE1.jpeg') no-repeat center center fixed; background-size: cover; padding: 1rem; }
        .container-wrapper { width: 100%; display: flex; flex-direction: column; align-items: center; }
        .logo-container { text-align: center; margin-bottom: 2.5rem; }
        .logo-container img { max-height: 130px; filter: drop-shadow(0 4px 8px rgba(0,0,0,0.5)); }
        .login-card { width: 100%; max-width: 450px; background: var(--white-trans); backdrop-filter: blur(10px); padding: 2.5rem; border-radius: 28px; box-shadow: 0 25px 50px rgba(0,0,0,0.3); border-top: 8px solid var(--ramave-red); animation: fadeIn 0.6s ease-out; }
        @@keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        .login-card h1 { margin: 0; color: #1a1a1a; text-align: center; font-size: 1.4rem; font-weight: 800; text-transform: uppercase; }
        .login-card h2 { color: var(--ramave-red); text-align: center; font-size: 1.1rem; margin: 0.5rem 0 2rem 0; font-weight: 600; }
        .form-group { margin-bottom: 1.2rem; }
        label { display: block; font-size: 0.85rem; font-weight: 700; color: var(--text-main); margin-bottom: 0.6rem; }
        input { width: 100%; padding: 14px 16px; border-radius: 14px; border: 1.5px solid var(--border-color); font-size: 16px; transition: all 0.3s; }
        input:focus { border-color: var(--ramave-red); outline: none; box-shadow: 0 0 0 4px rgba(198,40,40,0.15); }
        .password-wrapper { position: relative; }
        .toggle-password { position: absolute; right: 16px; top: 50%; transform: translateY(-50%); cursor: pointer; }
        #api-error { display: none; background: #fff0f0; padding: 12px; border-radius: 12px; border: 1px solid #ffcccc; margin-bottom: 1.5rem; color: #d63031; text-align: center; font-size: 0.85rem; font-weight: 600; }
        button { width: 100%; padding: 16px; background: var(--ramave-red); border: none; color: white; font-size: 1.1rem; font-weight: 700; border-radius: 14px; cursor: pointer; margin-top: 1.5rem; transition: all 0.3s; box-shadow: 0 8px 15px rgba(198,40,40,0.3); }
        button:hover { background: var(--ramave-red-dark); transform: translateY(-3px); }
    </style>
</head>
<body>

    <div class="container-wrapper">
        <div class="logo-container">
            <img src="/images/logoramave.jpg" alt="RAMAVE" />
        </div>

        <div class="login-card">
            <h1>F√°brica de Persianas RAMAVE</h1>
            <h2>Sistema Cotizador</h2>

            <div id="api-error"></div>

            <form id="loginForm">
                <div class="form-group">
                    @* Corregido: for apunta al id del input *@
                    <label for="txtCorreo">Correo Institucional</label>
                    <input id="txtCorreo" type="email" placeholder="usuario@ramave.com" autofocus required />
                </div>

                <div class="form-group">
                    @* Corregido: for apunta al id del input *@
                    <label for="txtPassword">Contrase√±a</label>
                    <div class="password-wrapper">
                        <input id="txtPassword" type="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required />
                        <span class="toggle-password" onclick="togglePassword()" id="eye-icon">üëÅÔ∏è</span>
                    </div>
                </div>

                <button type="button" onclick="ejecutarLoginApi()">Iniciar Sesi√≥n</button>
            </form>
        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById("txtPassword");
            const icon = document.getElementById("eye-icon");
            if (input.type === "password") {
                input.type = "text";
                icon.textContent = "üôà";
            } else {
                input.type = "password";
                icon.textContent = "üëÅÔ∏è";
            }
        }

        async function ejecutarLoginApi() {
            const correo = document.getElementById("txtCorreo").value.trim();
            const password = document.getElementById("txtPassword").value;
            const errorDiv = document.getElementById("api-error");

            if(!correo || !password) {
                errorDiv.innerText = "Por favor, llene todos los campos.";
                errorDiv.style.display = "block";
                return;
            }

            try {
                const response = await fetch('/api/Usuarios/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ Correo: correo, Password: password })
                });

                const data = await response.json();

                if (response.ok) {
                    // 1. Guardar en navegador
                    localStorage.setItem('usuarioId', data.id);
                    localStorage.setItem('usuarioNombre', data.usuario);

                    // 2. CREAR SESI√ìN EN EL SERVIDOR
                    // Redirigimos al puente que creamos en ClientesController
                    const params = new URLSearchParams({
                        rol: data.rol,
                        id: data.id,
                        nombre: data.usuario
                    });

                    window.location.href = `/Clientes/EstablecerSesion?${params.toString()}`;
                } else {
                    errorDiv.innerText = data.mensaje || "Credenciales incorrectas";
                    errorDiv.style.display = "block";
                }
            } catch (err) {
                console.error("Error:", err);
                errorDiv.innerText = "Error de conexi√≥n con el servidor.";
                errorDiv.style.display = "block";
            }
        }
    </script>
</body>
</html>
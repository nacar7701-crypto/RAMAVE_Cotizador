@model IEnumerable<RAMAVE_Cotizador.Models.Cotizaciones>

@{
    ViewData["Title"] = "Historial T√©cnico de Cotizaciones";
    // Variable para controlar la agrupaci√≥n por PresupuestoId
    int? ultimoPresupuestoId = null;
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    :root {
        --ramave-red: #c62828;
        --ramave-dark: #8e0000;
        --bg-body: #f0f2f5;
        --text-main: #1a1a1a;
        --border-color: #e0e0e0;
        --group-bg: #fdf2f2;
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
        font-size: 0.85rem;
    }

    .wrapper {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        padding-bottom: 120px;
    }

    /* Panel Superior */
    .header-panel {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .header-top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .header-panel h2 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--ramave-red);
    }

    .search-input {
        width: 100%;
        padding: 10px 15px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: #f8f9fa;
        font-size: 0.9rem;
        outline: none;
        box-sizing: border-box;
    }

    /* Tabla y Agrupaci√≥n */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 15px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background: #f8f9fa;
        padding: 12px 15px;
        font-size: 0.7rem;
        text-transform: uppercase;
        color: #666;
        border-bottom: 2px solid var(--border-color);
        text-align: left;
    }

    /* Fila de Encabezado de Grupo (Folio) */
    .group-header {
        background-color: var(--group-bg) !important;
        border-left: 5px solid var(--ramave-red);
    }

    .group-header td {
        padding: 10px 15px !important;
        font-weight: 800;
        color: var(--ramave-red);
        font-size: 0.8rem;
    }

    .fila-cotizacion td {
        padding: 12px 15px;
        border-bottom: 1px solid var(--border-color);
    }

    /* Estilos de contenido */
    .field-label {
        font-size: 0.6rem;
        font-weight: 700;
        color: #888;
        width: 65px;
        display: inline-block;
        text-transform: uppercase;
    }

    .price-group {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }

    .price-sub {
        font-size: 0.75rem;
        color: #777;
    }

    .price-total {
        font-weight: 700;
        margin-top: 2px;
    }

    /* Men√∫ Desplegable */
    .action-menu {
        position: relative;
        text-align: left;
    }

    .dot-btn {
        background: #f1f1f1;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px 12px;
        cursor: pointer;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        top: 100%;
        background: white;
        min-width: 160px;
        z-index: 100;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        border-radius: 6px;
        border: 1px solid var(--border-color);
    }

    .show {
        display: block;
    }

    .dropdown-content a,
    .dropdown-content button {
        padding: 10px 15px;
        width: 100%;
        border: none;
        background: none;
        text-align: left;
        font-size: 0.85rem;
        cursor: pointer;
        display: block;
        text-decoration: none;
        color: #333;
    }

    .dropdown-content a:hover {
        background: #f8f9fa;
    }

    .btn-main {
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        font-size: 0.75rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .btn-gray {
        background: #e0e0e0;
        color: #333;
    }

    .folio-link {
    text-decoration: none;
    padding: 5px; /* Quita el subrayado del enlace */
    display: inline-block;
    }

    .folio-badge {
        background: var(--ramave-red);
        color: white;
        padding: 5px 14px;
        border-radius: 20px;
        margin-right: 10px;
        font-size: 0.75rem;
        font-weight: 700;
        transition: all 0.3s ease;
        cursor: pointer;
        border: none;
        box-shadow: 0 2px 4px rgba(198, 40, 40, 0.2);
    }

    .folio-badge:hover {
        background: var(--ramave-dark);
        transform: scale(1.05); /* Se agranda un poquito al pasar el mouse */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .group-header:hover {
        background-color: #fce4e4 !important; /* Resalta toda la fila al pasar el mouse */
    }    

    @@media (max-width: 992px) {
        table thead {
            display: none;
        }

        .group-header td {
            display: block;
            width: 100%;
        }

        tr.fila-cotizacion {
            display: block;
            margin-bottom: 10px;
            border: 1px solid var(--border-color);
        }

        td {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        td::before {
            content: attr(data-label);
            font-weight: 700;
            color: var(--ramave-red);
            font-size: 0.6rem;
            text-transform: uppercase;
            margin-bottom: 2px;
        }
    }
</style>

<div class="wrapper">
    <div class="header-panel">
        <div class="header-top-row">
            <h2>Historial de Cotizaciones</h2>
            <div class="btn-actions-top">
                <button class="btn-main btn-gray" onclick="location.href='@Url.Action("Administrador", "Home")'">
                    <i class="fas fa-home"></i> Men√∫
                </button>
            </div>
        </div>
        <input type="text" id="txtBuscar" class="search-input"
            placeholder="üîç Buscar por cliente, folio, sistema, modelo o √°rea..." onkeyup="filtrarTabla()">
    </div>

    <div class="table-card">
        <table>
            <thead>
                <tr>
                    <th>Informaci√≥n T√©cnica</th>
                    <th>Detalles Producto</th>
                    <th>Medidas</th>
                    <th>Costo</th>
                    <th>P√∫blico</th>
                    <th>Distribuidor</th>
                    <th style="width: 50px;">Acci√≥n</th>
                </tr>
            </thead>
            <tbody id="listaCotizaciones">
                @foreach (var item in Model.OrderByDescending(x => x.PresupuestoId))
                {
                    if (ultimoPresupuestoId != item.PresupuestoId)
                    {
                        <tr class="group-header" data-folio="@item.PresupuestoId">
                            <td colspan="7">
                                <a href="@Url.Action("PresupuestoFinal", "Cotizaciones", new { id = item.PresupuestoId })"
                                    class="folio-link">
                                    <span class="folio-badge">
                                        <i class="fas fa-folder-open"></i> FOLIO #@item.PresupuestoId
                                    </span>
                                </a>

                                <span style="color: #555;">
                                    Cliente: <strong>@item.Cliente</strong>
                                </span>

                                <small class="text-muted" style="margin-left: 10px; font-weight: normal;">
                                    (Click en el folio para ver detalles)
                                </small>
                            </td>
                        </tr>
                        ultimoPresupuestoId = item.PresupuestoId;
                    }

                    var totalCosto = item.CostoTotalCortina + item.CostoTotalCortinero;
                    var totalPublico = item.PrecioCortinaPublico + item.PrecioCortineroPublico;
                    var totalDistribuidor = item.PrecioCortinaDistribuidor + item.PrecioCortineroDistribuidor;

                    <tr class="fila-cotizacion" data-folio="@item.PresupuestoId">
                        <td data-label="Informaci√≥n T√©cnica">
                            <div><span class="field-label">√Årea:</span> <strong>@item.Area</strong></div>
                            <div><span class="field-label">Sistema:</span> @item.Sistema</div>
                            <div><span class="field-label">Tipo:</span> @item.TipoCortina</div>
                        </td>
                        <td data-label="Detalles Producto">
                            <div><span class="field-label">Marca:</span> @item.Marca</div>
                            <div><span class="field-label">Modelo:</span> @item.Modelo</div>
                            <div><span class="field-label">Cat√°logo:</span> @item.Catalogo</div>
                        </td>
                        <td data-label="Medidas">
                            <strong>@item.Ancho.ToString("N2") x @item.Alto.ToString("N2") m</strong>
                        </td>
                        <td data-label="Costo">
                            <div class="price-group">
                                <span class="price-sub">Cor: @item.CostoTotalCortina.ToString("C")</span>
                                <span class="price-sub">Ctn: @item.CostoTotalCortinero.ToString("C")</span>
                                <span class="price-total" style="color:#1976d2">@totalCosto.ToString("C")</span>
                            </div>
                        </td>
                        <td data-label="P√∫blico">
                            <div class="price-group">
                                <span class="price-sub">Cor: @item.PrecioCortinaPublico.ToString("C")</span>
                                <span class="price-sub">Ctn: @item.PrecioCortineroPublico.ToString("C")</span>
                                <span class="price-total" style="color:var(--ramave-red)">@totalPublico.ToString("C")</span>
                            </div>
                        </td>
                        <td data-label="Distribuidor">
                            <div class="price-group">
                                <span class="price-sub">Cor: @item.PrecioCortinaDistribuidor.ToString("C")</span>
                                <span class="price-sub">Ctn: @item.PrecioCortineroDistribuidor.ToString("C")</span>
                                <span class="price-total" style="color:#333">@totalDistribuidor.ToString("C")</span>
                            </div>
                        </td>
                        <td data-label="Acci√≥n">
                            <div class="action-menu">
                                <button class="dot-btn" onclick="toggleMenu(event, @item.Id)">‚ãÆ</button>
                                <div id="dropdown-@item.Id" class="dropdown-content">
                                    <a href="@Url.Action("Editar", "Cotizaciones", new { id = item.Id })"><i
                                            class="fas fa-edit"></i>‚úèÔ∏è Editar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function toggleMenu(event, id) {
        event.stopPropagation();
        const el = document.getElementById('dropdown-' + id);
        const wasShowing = el.classList.contains('show');
        document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));
        if (!wasShowing) el.classList.add('show');
    }

    window.onclick = () => document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));

    function filtrarTabla() {
        const query = document.getElementById('txtBuscar').value.toLowerCase().trim();
        const filas = document.querySelectorAll('.fila-cotizacion');
        const cabeceras = document.querySelectorAll('.group-header');

        // Filtrar registros
        filas.forEach(fila => {
            const contenido = fila.innerText.toLowerCase();
            const folio = fila.getAttribute('data-folio');
            fila.style.display = (contenido.includes(query) || folio.includes(query)) ? "" : "none";
        });

        // Filtrar cabeceras: Solo se muestran si tienen al menos un registro visible debajo
        cabeceras.forEach(header => {
            const folio = header.getAttribute('data-folio');
            let tieneHijosVisibles = false;

            // Si el query es el folio directamente, mostrar
            if (query !== "" && folio.includes(query)) {
                header.style.display = "";
                return;
            }

            let siguiente = header.nextElementSibling;
            while (siguiente && siguiente.classList.contains('fila-cotizacion')) {
                if (siguiente.style.display !== "none") {
                    tieneHijosVisibles = true;
                    break;
                }
                siguiente = siguiente.nextElementSibling;
            }
            header.style.display = tieneHijosVisibles ? "" : "none";
        });
    }
</script>
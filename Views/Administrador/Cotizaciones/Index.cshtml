@model IEnumerable<RAMAVE_Cotizador.Models.Cotizaciones>

@{
    ViewData["Title"] = "Historial T√©cnico de Cotizaciones";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    :root {
        --ramave-red: #c62828;
        --ramave-dark: #8e0000;
        --bg-body: #f0f2f5;
        --text-main: #1a1a1a;
        --border-color: #e0e0e0;
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
        font-size: 0.85rem;
    }

    .wrapper {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        padding-bottom: 120px;
    }

    /* Panel Superior */
    .header-panel {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .header-top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .header-panel h2 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--ramave-red);
    }

    .search-input {
        width: 100%;
        padding: 10px 15px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: #f8f9fa;
        font-size: 0.9rem;
        outline: none;
        box-sizing: border-box;
    }

    .btn-main {
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        font-size: 0.75rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .btn-red { background: var(--ramave-red); color: white; }
    .btn-gray { background: #e0e0e0; color: #333; }

    /* Tabla */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    table { width: 100%; border-collapse: collapse; }

    th {
        background: #f8f9fa;
        padding: 10px 15px;
        font-size: 0.7rem;
        text-transform: uppercase;
        color: #666;
        border-bottom: 2px solid var(--border-color);
        text-align: left;
    }

    td {
        padding: 10px 15px;
        border-bottom: 1px solid var(--border-color);
        font-size: 0.85rem;
    }

    .field-label {
        font-size: 0.6rem;
        font-weight: 700;
        color: #888;
        width: 65px;
        display: inline-block;
        text-transform: uppercase;
    }

    /* Estilo de precios apilados */
    .price-group {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }
    .price-sub { font-size: 0.75rem; color: #777; }
    .price-total { font-weight: 700; margin-top: 2px; }

    /* Men√∫ Desplegable */
    .action-menu { position: relative; text-align: right; }
    .dot-btn { 
        background: #f1f1f1; 
        border: 1px solid #ddd; 
        border-radius: 4px; 
        padding: 5px 12px; 
        cursor: pointer;
        font-size: 1.1rem;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        top: 100%;
        background: white;
        min-width: 140px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        z-index: 100;
        border-radius: 6px;
        border: 1px solid var(--border-color);
    }

    .dropdown-up { top: auto !important; bottom: 100% !important; margin-bottom: 5px; }
    .show { display: block; }

    .dropdown-content a, .dropdown-content button {
        padding: 10px 15px;
        width: 100%;
        border: none;
        background: none;
        text-align: left;
        font-size: 0.85rem;
        cursor: pointer;
        display: block;
        text-decoration: none;
        color: #333;
    }
    .dropdown-content a:hover { background: #f8f9fa; }

    /* RESPONSIVO */
    @@media (max-width: 992px) {
        table thead { display: none; }
        table, tbody, tr, td { display: block; width: 100%; box-sizing: border-box; }
        tr { margin-bottom: 15px; border: 1px solid var(--border-color); border-radius: 10px; padding: 5px; background: white; }
        td { display: flex; flex-direction: column; border-bottom: 1px solid #f8f9fa; padding: 8px 12px; }
        td:last-child { border-bottom: none; align-items: flex-start; }
        .action-menu { text-align: left; width: 100%; }
        .dropdown-content { left: 0; right: auto; }
        td::before {
            content: attr(data-label);
            font-weight: 700;
            color: var(--ramave-red);
            font-size: 0.65rem;
            text-transform: uppercase;
            margin-bottom: 4px;
        }
    }
</style>

<div class="wrapper">
    <div class="header-panel">
        <div class="header-top-row">
            <h2>Historial de Cotizaciones</h2>
            <div class="btn-actions-top">
                <button class="btn-main btn-gray" onclick="location.href='@Url.Action("Administrador", "Home")'">Men√∫</button>
            </div>
        </div>
        <input type="text" id="txtBuscar" class="search-input" placeholder="üîç Buscar por cliente, marca, modelo, cat√°logo, sistema..." onkeyup="filtrarTabla()">
    </div>

    <div class="table-card">
        <table>
            <thead>
                <tr>
                    <th>Informaci√≥n T√©cnica</th>
                    <th>Detalles Producto</th>
                    <th>Medidas</th>
                    <th>Costo</th>
                    <th>P√∫blico</th>
                    <th>Distribuidor</th>
                    <th style="width: 50px;">Acci√≥n</th>
                </tr>
            </thead>
            <tbody id="listaCotizaciones">
                @foreach (var item in Model)
                {
                    var totalCosto = item.CostoTotalCortina + item.CostoTotalCortinero;
                    var totalPublico = item.PrecioCortinaPublico + item.PrecioCortineroPublico;
                    var totalDistribuidor = item.PrecioCortinaDistribuidor + item.PrecioCortineroDistribuidor;

                    <tr class="fila-cotizacion">
                        <td data-label="Informaci√≥n T√©cnica">
                            <div><span class="field-label">Cliente:</span> <strong>@item.Cliente</strong></div>
                            <div><span class="field-label">Sistema:</span> <strong>@item.Sistema</strong></div>
                            <div><span class="field-label">Tipo:</span> <strong>@item.TipoCortina</strong></div>
                        </td>
                        <td data-label="Detalles Producto">
                            <div><span class="field-label">Marca:</span> @item.Marca</div>
                            <div><span class="field-label">Modelo:</span> @item.Modelo</div>
                            <div><span class="field-label">Cat√°logo:</span> @item.Catalogo</div>
                        </td>
                        <td data-label="Medidas">
                            <strong>@item.Ancho.ToString("N2") x @item.Alto.ToString("N2")</strong>
                        </td>
                        <td data-label="Costo">
                            <div class="price-group">
                                <span class="price-sub">Cor: @item.CostoTotalCortina.ToString("C")</span>
                                <span class="price-sub">Ctn: @item.CostoTotalCortinero.ToString("C")</span>
                                <span class="price-total" style="color:#1976d2">@totalCosto.ToString("C")</span>
                            </div>
                        </td>
                        <td data-label="P√∫blico">
                            <div class="price-group">
                                <span class="price-sub">Cor: @item.PrecioCortinaPublico.ToString("C")</span>
                                <span class="price-sub">Ctn: @item.PrecioCortineroPublico.ToString("C")</span>
                                <span class="price-total" style="color:var(--ramave-red)">@totalPublico.ToString("C")</span>
                            </div>
                        </td>
                        <td data-label="Distribuidor">
                            <div class="price-group">
                                <span class="price-sub">Cor: @item.PrecioCortinaDistribuidor.ToString("C")</span>
                                <span class="price-sub">Ctn: @item.PrecioCortineroDistribuidor.ToString("C")</span>
                                <span class="price-total" style="color:#333">@totalDistribuidor.ToString("C")</span>
                            </div>
                        </td>
                        <td data-label="Acci√≥n">
                            <div class="action-menu">
                                <button class="dot-btn" onclick="toggleMenu(event, @item.Id)">‚ãÆ</button>
                                <div id="dropdown-@item.Id" class="dropdown-content">
                                    <a href="@Url.Action("Detalle", "Cotizaciones", new { area = "Administrador", id = item.Id })">üëÅÔ∏è Ver Detalle</a>
                                    <a href="@Url.Action("Editar", "Cotizaciones", new { area = "Administrador", id = item.Id })">‚úèÔ∏è Editar</a>
                                    <button onclick="eliminar(@item.Id)" style="color: #d32f2f;">‚ùå Eliminar</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function toggleMenu(event, id) {
        event.stopPropagation();
        const el = document.getElementById('dropdown-' + id);
        const wasShowing = el.classList.contains('show');
        
        // Cerrar todos los dem√°s
        document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));
        
        // Si no estaba mostrado, mostrarlo y verificar posici√≥n
        if (!wasShowing) {
            el.classList.add('show');
            const rect = el.getBoundingClientRect();
            if (rect.bottom > window.innerHeight) {
                el.classList.add('dropdown-up');
            }
        }
    }

    window.onclick = () => {
        document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));
    }

    function filtrarTabla() {
        const query = document.getElementById('txtBuscar').value.toLowerCase().trim();
        const filas = document.querySelectorAll('.fila-cotizacion');

        filas.forEach(fila => {
            const texto = fila.innerText.toLowerCase();
            fila.style.display = texto.includes(query) ? "" : "none";
        });
    }

    function eliminar(id) {
        if (confirm("¬øEst√°s seguro de eliminar esta cotizaci√≥n?")) {
            // Aqu√≠ ir√≠a tu l√≥gica de eliminaci√≥n (Fetch o redirecci√≥n)
            console.log("Eliminando cotizaci√≥n:", id);
        }
    }
</script>
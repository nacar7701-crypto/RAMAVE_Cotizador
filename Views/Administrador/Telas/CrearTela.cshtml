@{
    ViewData["Title"] = "Registro de Nueva Tela";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
<style>
    :root {
        --ramave-red: #c62828;
        --ramave-dark: #8e0000;
        --ramave-soft-red: #fff5f5;
        --bg-light: #f4f7f6;
        --text-main: #2d3436;
        --text-muted: #636e72;
        --border-color: #dfe6e9;
    }

    body {
        background-color: var(--bg-light);
        font-family: 'Inter', sans-serif;
        color: var(--text-main);
        margin: 0;
    }

    .container-full {
        padding: 30px 20px;
        max-width: 1100px;
        margin: 0 auto;
    }

    .main-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.06);
        border: 1px solid var(--border-color);
        border-top: 8px solid var(--ramave-red);
        overflow: hidden;
    }

    .card-header-ramave {
        background: white;
        padding: 30px 40px;
        border-bottom: 2px solid var(--ramave-soft-red);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-header-ramave h2 {
        margin: 5px 0 0 0;
        font-size: 1.5rem;
        color: var(--ramave-red);
        font-weight: 800;
    }

    .form-section-card {
        background: #fff;
        border: 1px solid var(--border-color);
        padding: 25px 35px;
        border-radius: 16px;
        border-top: 4px solid var(--ramave-red);
        height: 100%;
        margin-bottom: 20px;
    }

    .section-title {
        font-size: 0.75rem;
        font-weight: 800;
        color: var(--ramave-red);
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 20px;
        display: block;
    }

    /* ETIQUETAS: Todas iguales a la sección 1 */
    .form-label {
        font-weight: 500;
        font-size: 0.8rem;
        color: var(--text-muted);
        margin-bottom: 8px;
        display: block;
        text-transform: uppercase;
        text-align: left;
        /* Alineado a la izquierda como la sección 1 */
    }

    .form-control,
    .form-select {
        font-family: 'Inter', sans-serif;
        border-radius: 10px;
        padding: 12px 16px;
        border: 1px solid var(--border-color);
        font-size: 0.95rem;
        background-color: #fcfcfc;
        transition: all 0.2s ease;
        width: 100%;
        text-transform: uppercase;
    }

    /* Estilo para inputs de números (Ancho, Existencia, Precios) */
    .text-end-input {
        text-align: right;
    }

    .highlight-box {
        background: var(--ramave-soft-red);
        padding: 20px;
        border-radius: 12px;
        border: 1px solid rgba(198, 40, 40, 0.1);
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        padding: 30px 30px;
        background: #f8f9fa;
        border-top: 1px solid var(--border-color);
        justify-content: flex-end;
    }

    .btn-submit {
        background: var(--ramave-red);
        color: white;
        font-weight: 700;
        padding: 16px 30px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        text-transform: uppercase;
        font-size: 0.9rem;
        transition: 0.3s;
    }

    .btn-submit:hover {
        background: var(--ramave-dark);
        transform: translateY(-2px);
    }

    .btn-cancel {
        background: white;
        color: var(--text-muted);
        font-weight: 700;
        padding: 16px 30px;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        text-transform: uppercase;
        text-decoration: none;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
    }

    .currency-symbol {
        position: absolute;
        left: 15px;
        font-weight: 800;
        color: var(--ramave-red);
        z-index: 5;
    }

    .input-group {
        position: relative;
        display: flex;
        align-items: center;
    }

    .form-control-sm {
        padding: 12px 12px !important;
        font-size: 0.85rem !important;
    }

    .btn-back {
        background: var(--ramave-soft-red);
        border: none;
        color: var(--ramave-red);
        font-weight: 700;
        font-size: 0.7rem;
        padding: 8px 16px;
        border-radius: 20px;
        cursor: pointer;
        text-transform: uppercase;
        margin-bottom: 10px;
    }
</style>

<div class="container-full">
    <div class="main-card">
        <div class="card-header-ramave">
            <div>
                <button class="btn-back" onclick="location.href='@Url.Action("Telas", "Administrador")'">
                    ← VOLVER AL LISTADO
                </button>
                <h2>Registro de Nueva Tela</h2>
            </div>
        </div>

        <form id="formNuevaTela">
            <div style="padding: 40px;">
                <div class="row g-4">
                    <div class="col-lg-7">
                        <div class="form-section-card">
                            <span class="section-title">1. Clasificación y Modelo</span>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Marca</label>
                                    <select id="selectMarca" class="form-select" onchange="cargarModelos(this.value)"
                                        required>
                                        <option value="">SELECCIONE MARCA...</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Modelo</label>
                                    <select id="id_modelo" name="id_modelo" class="form-select" required disabled>
                                        <option value="">ESPERANDO MARCA...</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-section-card">
                            <span class="section-title">2. Detalles Técnicos</span>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Tipo</label>
                                    <input type="text" name="tipo" class="form-control form-control-sm"
                                        placeholder="EJ: BLACKOUT" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Colores</label>
                                    <input type="text" id="color_nombre" name="color_nombre"
                                        class="form-control form-control-sm" placeholder="VERDE, NEGRO..." required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Catálogo</label>
                                    <input type="text" name="catalogo" class="form-control form-control-sm"
                                        placeholder="N/A">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Ancho (mts)</label>
                                    <input type="number" step="0.0001" name="ancho"
                                        class="form-control form-control-sm text-end-input" placeholder="0.00" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Existencia</label>
                                    <input type="number" step="0.01" name="existencia"
                                        class="form-control form-control-sm text-end-input" value="0">
                                </div>
                            </div>
                        </div>

                        <div class="form-section-card">
                            <span class="section-title">3. Lista de Precios</span>
                            <div class="highlight-box">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Precio Corte</label>
                                        <div class="input-group">
                                            <span class="currency-symbol">$</span>
                                            <input type="number" step="0.01" name="precio_ml_corte" class="form-control"
                                                style="padding-left: 35px;" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Precio Rollo</label>
                                        <div class="input-group">
                                            <span class="currency-symbol">$</span>
                                            <input type="number" step="0.01" name="precio_ml_rollo" class="form-control"
                                                style="padding-left: 35px;" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-section-card">
                        <span class="section-title">4. Ficha de Cuidado</span>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="compact-group">
                                    <label class="form-label">Lavar</label>
                                    <input type="text" name="lavar" class="form-control form-control-sm input-short"
                                        placeholder="N/A">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="compact-group">
                                    <label class="form-label">Jabón</label>
                                    <input type="text" name="jabon" class="form-control form-control-sm input-short"
                                        placeholder="N/A">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="compact-group">
                                    <label class="form-label">Temp. Agua</label>
                                    <input type="text" name="temp_agua" class="form-control form-control-sm input-short"
                                        placeholder="Ej: 30°C">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="compact-group">
                                    <label class="form-label">Blanqueador</label>
                                    <input type="text" name="blanqueador"
                                        class="form-control form-control-sm input-short" placeholder="N/A">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="compact-group">
                                    <label class="form-label">Exprimir</label>
                                    <input type="text" name="exprimir" class="form-control form-control-sm input-short"
                                        placeholder="N/A">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="compact-group">
                                    <label class="form-label">Planchar</label>
                                    <input type="text" name="planchar" class="form-control form-control-sm input-short"
                                        placeholder="N/A">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a href="@Url.Action("Telas", "Administrador")" class="btn-cancel">Cancelar</a>
                <button type="button" onclick="registrarTela()" class="btn-submit">Guardar</button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", cargarMarcas);

    async function cargarMarcas() {
        try {
            const res = await fetch('/api/Telas/marcas');
            const marcas = await res.json();
            const select = document.getElementById('selectMarca');
            marcas.forEach(m => {
                const opt = document.createElement('option');
                opt.value = m.id;
                opt.textContent = m.nombre.toUpperCase();
                select.appendChild(opt);
            });
        } catch (error) { console.error("Error marcas:", error); }
    }

    async function cargarModelos(idMarca) {
        const selectModelo = document.getElementById('id_modelo');
        selectModelo.innerHTML = '<option value="">CARGANDO...</option>';
        if (!idMarca) { selectModelo.disabled = true; return; }

        try {
            const res = await fetch(`/api/Telas/modelos/${idMarca}`);
            const modelos = await res.json();
            selectModelo.innerHTML = '<option value="">SELECCIONE MODELO...</option>';
            if (modelos.length > 0) {
                modelos.forEach(m => {
                    const opt = document.createElement('option');
                    opt.value = m.id;
                    opt.textContent = m.nombre.toUpperCase();
                    selectModelo.appendChild(opt);
                });
                selectModelo.disabled = false;
            } else {
                selectModelo.disabled = true;
                selectModelo.innerHTML = '<option value="">SIN MODELOS</option>';
            }
        } catch (error) { console.error("Error modelos:", error); }
    }

    async function registrarTela() {
        const form = document.getElementById('formNuevaTela');
        if (!form.checkValidity()) { form.reportValidity(); return; }

        const formData = new FormData(form);

        // --- LOGICA DE COLORES PARA EL CONTROLADOR ---
        const textoColores = formData.get('color_nombre') || "";
        const listaColoresArray = textoColores.split(',')
            .map(c => c.trim().toUpperCase())
            .filter(c => c !== "");

        // Mapeo exacto al TelaCreateDto de tu Controller
        const data = {
            id_modelo: parseInt(formData.get('id_modelo')),
            catalogo: formData.get('catalogo')?.toUpperCase().trim() || "N/A",
            tipo: formData.get('tipo').toUpperCase().trim(),

            // Se envía como Array para que el Controller lo reciba como List<string>
            ColoresNuevos: listaColoresArray,

            ancho: parseFloat(formData.get('ancho')) || 0,
            precio_ml_corte: parseFloat(formData.get('precio_ml_corte')) || 0,
            precio_ml_rollo: parseFloat(formData.get('precio_ml_rollo')) || 0,

            // Campos adicionales que mencionas en tu registro
            existencia: parseFloat(formData.get('existencia')) || 0,
            lavar: formData.get('lavar')?.toUpperCase().trim() || "N/A",
            jabon: formData.get('jabon')?.toUpperCase().trim() || "N/A",
            temp_agua: formData.get('temp_agua')?.toUpperCase().trim() || "N/A",
            blanqueador: formData.get('blanqueador')?.toUpperCase().trim() || "N/A",
            exprimir: formData.get('exprimir')?.toUpperCase().trim() || "N/A",
            planchar: formData.get('planchar')?.toUpperCase().trim() || "N/A"
        };

        try {
            const res = await fetch('/api/Telas', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                alert("REGISTRO EXITOSO.");
                location.href = '@Url.Action("Telas", "Administrador")';
            } else {
                const errorText = await res.text();
                alert("ERROR AL GUARDAR: " + errorText);
            }
        } catch (error) {
            console.error("Error:", error);
            alert("OCURRIÓ UN ERROR EN LA CONEXIÓN.");
        }
    }
</script>
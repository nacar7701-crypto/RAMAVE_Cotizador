@{
    ViewData["Title"] = "Administraci√≥n Integral de Telas";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    :root {
        --ramave-red: #c62828;
        --ramave-dark: #8e0000;
        --bg-body: #f0f2f5;
        --text-main: #1a1a1a;
        --border-color: #e0e0e0;
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Inter', sans-serif;
        margin: 0;
        color: var(--text-main);
        font-size: 0.85rem;
    }

    .wrapper {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        padding-bottom: 120px;
    }

    /* Panel Superior */
    .header-panel {
        background: white;
        padding: 1rem;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .header-top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .header-panel h2 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--ramave-red);
    }

    .search-input {
        width: 100%;
        padding: 10px 15px;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        background: #f8f9fa;
        font-size: 0.9rem;
        outline: none;
        box-sizing: border-box;
    }

    .btn-main {
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        font-size: 0.75rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .btn-red { background: var(--ramave-red); color: white; }
    .btn-gray { background: #e0e0e0; color: #333; }

    /* Tabla */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    table { width: 100%; border-collapse: collapse; }

    th {
        background: #f8f9fa;
        padding: 10px 15px;
        font-size: 0.7rem;
        text-transform: uppercase;
        color: #666;
        border-bottom: 2px solid var(--border-color);
        text-align: left;
    }

    td {
        padding: 10px 15px;
        border-bottom: 1px solid var(--border-color);
        font-size: 0.85rem;
    }

    .field-label {
        font-size: 0.6rem;
        font-weight: 700;
        color: #888;
        width: 65px;
        display: inline-block;
        text-transform: uppercase;
    }

    .care-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 4px;
    }

    .care-item { font-size: 0.7rem; color: #555; }

    /* Men√∫ Desplegable */
    .action-menu { position: relative; }
    .pc-right { text-align: right; }

    .dot-btn { 
        background: #f1f1f1; 
        border: 1px solid #ddd; 
        border-radius: 4px; 
        padding: 5px 12px; 
        cursor: pointer;
        font-size: 1.1rem;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        top: 100%;
        background: white;
        min-width: 140px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        z-index: 100;
        border-radius: 6px;
        border: 1px solid var(--border-color);
    }

    .dropdown-up { top: auto !important; bottom: 100% !important; margin-bottom: 5px; }
    .show { display: block; }

    .dropdown-content button {
        padding: 10px 15px;
        width: 100%;
        border: none;
        background: none;
        text-align: left;
        font-size: 0.85rem;
        cursor: pointer;
    }

    /* RESPONSIVO */
    @@media (max-width: 992px) {
        table thead { display: none; }
        table, tbody, tr, td { display: block; width: 100%; box-sizing: border-box; }
        tr { margin-bottom: 15px; border: 1px solid var(--border-color); border-radius: 10px; padding: 5px; }
        
        td { 
            display: flex; 
            flex-direction: column; 
            border-bottom: 1px solid #f8f9fa; 
            padding: 8px 12px; 
        }

        /* Acciones a la IZQUIERDA en m√≥vil */
        td:last-child { 
            border-bottom: none; 
            align-items: flex-start; 
            padding: 12px;
        }
        
        .action-menu { text-align: left; width: 100%; }
        .dropdown-content { left: 0; right: auto; }

        td::before {
            content: attr(data-label);
            font-weight: 700;
            color: var(--ramave-red);
            font-size: 0.65rem;
            text-transform: uppercase;
            margin-bottom: 4px;
        }
    }
</style>

<div class="wrapper">
    <div class="header-panel">
        <div class="header-top-row">
            <h2>Inventario</h2>
            <div class="btn-actions-top">
                <button class="btn-main btn-gray" onclick="location.href='@Url.Action("Administrador", "Home")'">Men√∫</button>
                <button class="btn-main btn-gray" onclick="location.href='@Url.Action("Crear", "Administrador")'">‚ûï Marca/Modelo</button>
                <button class="btn-main btn-red" onclick="location.href='@Url.Action("CrearTela", "Administrador")'">‚ûï Nueva Tela</button>
            </div>
        </div>
        <input type="text" id="txtBuscar" class="search-input" placeholder="üîç Buscar por marca, modelo, cat√°logo, color..." onkeyup="filtrarTabla()">
    </div>

    <div class="table-card">
        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Descripci√≥n</th>
                    <th>Costos Base</th>
                    <th>Venta (IVA)</th>
                    <th>Cuidados</th>
                    <th style="width: 50px;">Acci√≥n</th>
                </tr>
            </thead>
            <tbody id="listaTelas"></tbody>
        </table>
    </div>
</div>

<script>
    const API_BASE = '/api/telas';
    let listaTelas = [];

    document.addEventListener("DOMContentLoaded", cargarDatos);

    const renderField = (label, value) => {
        if (!value) return '';
        return `<div><span class="field-label">${label}:</span> <strong>${value}</strong></div>`;
    };

    async function cargarDatos() {
        const res = await fetch(API_BASE);
        listaTelas = await res.json();
        mostrarTelas(listaTelas);
    }

    function mostrarTelas(datos) {
        const tbody = document.getElementById('listaTelas');
        tbody.innerHTML = datos.map((t, index) => {
            const isLast = (index >= datos.length - 2 && datos.length > 3);
            const c = t.cuidados || {};

            return `
            <tr>
                <td data-label="Producto">
                    ${renderField('Marca', t.marca)}
                    ${renderField('Modelo', t.modelo)}
                    ${renderField('Tipo', t.tipo)}
                </td>
                <td data-label="Descripci√≥n">
                    ${renderField('Color', t.color_nombre)}
                    ${renderField('Cat√°logo', t.catalogo)}
                    ${renderField('Ancho', t.ancho ? t.ancho + 'm' : null)}
                </td>
                <td data-label="Costos Base">
                    <div style="color:#666">Corte: <strong>$${t.precio_ml_corte.toFixed(2)}</strong></div>
                    <div style="color:#666">Rollo: <strong>$${t.precio_ml_rollo.toFixed(2)}</strong></div>
                </td>
                <td data-label="Venta (IVA)">
                    <div style="color:var(--ramave-red); font-weight:700">Corte: $${t.precio_ml_corte_iva.toFixed(2)}</div>
                    <div style="color:#1976d2; font-weight:700">Rollo: $${t.precio_ml_rollo_iva.toFixed(2)}</div>
                    <div style="color:#555; font-size: 0.75rem">M2: $${t.costo_x_m2.toFixed(2)}</div>
                </td>
                <td data-label="Cuidados">
                    <div class="care-grid">
                        <div class="care-item"><strong>Lavar:</strong> ${c.lavar || ''}</div>
                        <div class="care-item"><strong>Temp:</strong> ${c.temp_agua || ''}</div>
                        <div class="care-item"><strong>Plancha:</strong> ${c.planchar || ''}</div>
                        <div class="care-item"><strong>Blanq:</strong> ${c.blanqueador || ''}</div>
                        <div class="care-item"><strong>Jab√≥n:</strong> ${c.jabon || ''}</div>
                        <div class="care-item"><strong>Exprimir:</strong> ${c.exprimir || ''}</div>
                    </div>
                </td>
                <td data-label="Acciones">
                    <div class="action-menu pc-right">
                        <button class="dot-btn" onclick="toggleMenu(event, ${t.id})">‚ãÆ</button>
                        <div id="dropdown-${t.id}" class="dropdown-content ${isLast ? 'dropdown-up' : ''}">
                            <button onclick="EditarTela(${t.id})">‚úèÔ∏è Editar</button>
                            <button onclick="eliminar(${t.id})" style="color: #d32f2f;">‚ùå Eliminar</button>
                        </div>
                    </div>
                </td>
            </tr>`;
        }).join('');
    }

    function filtrarTabla() {
        const busqueda = document.getElementById('txtBuscar').value.toLowerCase();
        const filtrados = listaTelas.filter(t =>
            (t.marca || "").toLowerCase().includes(busqueda) ||
            (t.modelo || "").toLowerCase().includes(busqueda) ||
            (t.color_nombre || "").toLowerCase().includes(busqueda) ||
            (t.catalogo || "").toLowerCase().includes(busqueda) // Agregado b√∫squeda por cat√°logo
        );
        mostrarTelas(filtrados);
    }

    function toggleMenu(event, id) {
        event.stopPropagation();
        const el = document.getElementById('dropdown-' + id);
        const wasShowing = el.classList.contains('show');
        document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));
        if (!wasShowing) el.classList.add('show');
    }

    window.onclick = () => {
        document.querySelectorAll('.dropdown-content').forEach(d => d.classList.remove('show'));
    }

    function EditarTela(id) {
        const urlBase = '@Url.Action("EditarTela", "Administrador")';
        window.location.href = `${urlBase}/${id}`;
    }

    async function eliminar(id) {
        if (confirm("¬øEliminar tela permanentemente?")) {
            const res = await fetch(`${API_BASE}/${id}`, { method: 'DELETE' });
            if (res.ok) cargarDatos();
        }
    }
</script>
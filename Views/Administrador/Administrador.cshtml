@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>Panel Administrador | RAMAVE</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --ramave-red: #c62828;
            --ramave-dark: #8e0000;
            --bg-gray: #f4f7f6;
            --shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            margin: 0;
            background: var(--bg-gray);
            color: #333;
            /* Soporte para notch de celulares */
            padding-bottom: env(safe-area-inset-bottom);
        }

        /* HEADER RESPONSIVO */
        header {
            background: white;
            padding: 0.8rem 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
            padding-top: calc(0.8rem + env(safe-area-inset-top));
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-box {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        header img {
            height: 50px; /* Tama√±o del logo aumentado para legibilidad */
            width: auto;
            object-fit: contain;
        }

        header h1 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 800;
            color: var(--ramave-red);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* BOT√ìN CERRAR SESI√ìN */
        .btn-logout {
            background: #fff0f0;
            color: var(--ramave-red);
            border: 1.5px solid var(--ramave-red);
            padding: 10px 18px;
            border-radius: 12px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 700;
            transition: var(--transition);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-logout:hover {
            background: var(--ramave-red);
            color: white;
            transform: scale(1.05);
        }

        /* CONTENEDOR PRINCIPAL */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .welcome-msg {
            margin-bottom: 40px;
            border-left: 5px solid var(--ramave-red);
            padding-left: 20px;
        }

        .welcome-msg h2 {
            margin: 0;
            font-size: 2rem;
            color: #1a1a1a;
            font-weight: 800;
        }

        .welcome-msg p {
            color: #666;
            margin: 8px 0 0;
            font-size: 1.1rem;
        }

        /* GRID DE TARJETAS */
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }

        .card {
            background: white;
            border-radius: 24px;
            padding: 40px 30px;
            text-align: center;
            text-decoration: none;
            color: inherit;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow);
            border: 1px solid rgba(0,0,0,0.02);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(198, 40, 40, 0.1);
            background: linear-gradient(to bottom, white, #fffafa);
        }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: #fdf2f2;
            border-radius: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 25px;
            transition: var(--transition);
            font-size: 35px;
        }

        .card:hover .icon-circle {
            background: var(--ramave-red);
            color: white;
            transform: rotate(5deg);
        }

        .card h3 {
            margin: 0;
            color: #1a1a1a;
            font-size: 1.3rem;
            font-weight: 700;
        }

        .card p {
            font-size: 0.95rem;
            color: #777;
            margin-top: 15px;
            line-height: 1.6;
        }

        /* üì± RESPONSIVE */

        /* Tablets */
        @@media (max-width: 992px) {
            .grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Tel√©fonos */
        @@media (max-width: 650px) {
            header {
                padding: 1rem 5%;
                flex-direction: row; /* Mantenemos logo y bot√≥n alineados */
            }

            header h1 {
                display: none; /* Ocultamos texto largo en m√≥viles para dar espacio al logo */
            }

            header img {
                height: 60px;
            }

            .container {
                padding: 30px 20px;
            }

            .welcome-msg h2 {
                font-size: 1.6rem;
            }

            .grid {
                grid-template-columns: 1fr; /* Una sola columna en celular */
                gap: 20px;
            }

            .card {
                padding: 30px 20px;
                flex-direction: row; /* Dise√±o horizontal en celular para ahorrar espacio vertical */
                text-align: left;
                gap: 20px;
            }

            .icon-circle {
                width: 60px;
                height: 60px;
                margin-bottom: 0;
                font-size: 25px;
                flex-shrink: 0;
            }

            .card p {
                display: none; /* Ocultamos descripci√≥n en celular para vista compacta */
            }
        }
    </style>
</head>

<body>

